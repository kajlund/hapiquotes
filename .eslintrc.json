{
  "root": true,
  "env": {
    "browser": false,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script",
    "ecmaFeatures": {
      "impliedStrict ": true
    }
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["promise", "prettier"],
  "rules": {
    "prettier/prettier": "error"
  }
}
